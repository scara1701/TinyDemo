<UserControl x:Class="TinyDemo.WPFClient.Controls.NumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TinyDemo.WPFClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             Width="100" Height="100"
             >
    <Grid>
        <Ellipse Fill="LightBlue" Stroke="Black"/>
        <TextBlock Text="{Binding Number, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
